<!DOCTYPE html>
<html>
    <style>
    body {
      font-family: "Times New Roman", times, serif;
    }
    
    .navpane {
      height: 100%;
      width: 180px;
      position: fixed;
      top: 0;
      left: 0;
      background-color: #111;
      overflow-x: hidden;
      padding-top: 10px;
    }
    
    .navpane a {
      padding: 6px 8px 6px 30px;
      text-decoration: none;
      font-size: 25px;
      color: #f11212;
      display: block;
    } 
    .maincontainer {
      margin-left: 220px; 
      font-size: 30px; 
      padding: 0px 0px;
    }

    table, th, td {
      border: 1px solid black;
    }

    th, td {
      padding: 10px;
    }
    </style>
    </head>
    <body>
    
    <%- include('partials/navpanelhome') %>

    
    <div class="maincontainer">
      <h2 style="color:red">SENECA LIBRARY</h2>
      <article>
      <h2>Admin Page</h2>
      <p>This page is for editing.</p>
      </article>

      <table>
        <tr>
            <th>id</th>
            <th>Name</th>
            <th>Author</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
      <tbody>
        <%books.forEach(books => { %>
          <tr>
            <td><%= books._id %></td>
            <td><%= books.name %></td>
            <td><%= books.authorname %></td>
            <td><a href="<%= `edit/${books._id}`%>">Edit</a> </td>
            <td><a href="<%= `delete/${books._id}`%>" onclick="return confirm('Are you sure you want to delete this record?')">Delete</a>  </td>
            <% }); %>
          </tr>
      </tbody>
      </table>
    </div>

    </body>
    </html> 
</html>